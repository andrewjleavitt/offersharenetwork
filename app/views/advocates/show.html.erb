<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @advocate.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @advocate.email %>
</p>


<% @advocate.offer_shares.each do |offer_share| %>
  <table>
    <thead>
      <tr>
        <td>Offer</td>
        <td>Redemptions</td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= offer_share.offer.name %></td>
        <td><%= offer_share.redemptions.count %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= link_to 'Edit', edit_advocate_path(@advocate) %> |
<%= link_to 'Back', advocates_path %>
